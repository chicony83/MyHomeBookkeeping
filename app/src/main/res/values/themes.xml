<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHomeBookkeeping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyHomeBookkeeping.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyHomeBookkeeping.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyHomeBookkeeping.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MatchParent_WrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EnterNameEditText" parent="MatchParent_WrapContent">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">30</item>
        <item name="android:hint">@string/enterName</item>
    </style>

    <style name="EnterNameLayout" parent="MatchParent_WrapContent">
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ConfirmationLayout" parent="MatchParent_WrapContent">
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RecyclerViewItem" parent="MatchParent_WrapContent">
        <item name="android:padding">@dimen/margin_normal</item>
    </style>

    <style name="MoneyMovingItemTextView" parent="WrapContent_WrapContent">

    </style>

    <style name="TextDescriptions" parent="MatchParent_WrapContent">

    </style>

    <style name="TextDescriptionLine" parent="WrapContent_WrapContent">
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="Buttons">

    </style>

    <style name="ButtonsMatchParent_WrapContent" parent="Buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SelectedParamDescription">
        <item name="android:layout_marginStart">@dimen/margin_double</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SelectedParamName" parent="WrapContent_WrapContent">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

</resources>