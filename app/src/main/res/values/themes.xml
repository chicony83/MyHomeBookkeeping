<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyHomeBookkeeping" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyHomeBookkeeping.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyHomeBookkeeping.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyHomeBookkeeping.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MatchParent_WrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent_WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EnterNameLayout" parent="MatchParent_WrapContent">
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ConfirmationLayout" parent="MatchParent_WrapContent">
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="TextDescriptions" parent="MatchParent_WrapContent">

    </style>

    <style name="TextDescriptionLine" parent="WrapContent_WrapContent">
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>


    <style name="DialogHeaderText">

    </style>

</resources>