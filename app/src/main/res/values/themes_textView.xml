<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:layout_marginTop">@dimen/margin_half_normal</item>
    </style>

    <style name="Description" parent="MatchParent_WrapContent">
        <item name="android:textSize">@dimen/H1</item>
        <item name="android:layout_marginTop">@dimen/margin_half_normal</item>
    </style>

    <style name="Description.first_launch_fragment">
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Description.MessageOfBusyName">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/warning</item>
        <item name="android:visibility">gone</item>
        <item name="android:text">@string/description_this_name_is_taken</item>
    </style>

    <style name="Description.IncomeText">
        <item name="android:textColor">@color/incomeTextColor</item>
        <item name="android:textSize">@dimen/H4</item>
    </style>

    <style name="Description.IncomeText.FirstLaunch" >
        <item name="android:checked">true</item>
    </style>

    <style name="Description.SpendingText">
        <item name="android:textColor">@color/spendingTextColor</item>
        <item name="android:textSize">@dimen/H4</item>

    </style>

    <style name="Description.SpendingText.FirstLaunch" >
        <item name="android:checked">true</item>
    </style>

    <style name="Description.CashAccounts" />

    <style name="Description.CashAccounts.FirstLaunch">
        <item name="android:textSize">@dimen/H4</item>
        <item name="android:checked">true</item>
    </style>

    <style name="Description.Currencies" />

    <style name="Description.Currencies.FirstLaunch">
        <item name="android:textSize">@dimen/H4</item>
        <item name="android:checked">true</item>
    </style>

</resources>