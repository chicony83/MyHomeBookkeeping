<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogEditText">
        <item name="android:inputType">text</item>
        <item name="android:maxLength">30</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxLines">1</item>
    </style>

    <style name="DialogEnterNewName" parent="DialogEditText">


        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
<!--        <item name="android:layout_width">match_parent</item>-->
        <item name="android:hint">@string/hint_enter_name</item>
    </style>

    <style name="DialogEnterNewNameShort" parent="DialogEditText">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/hint_new_currency_enter_name_short</item>
    </style>

    <style name="DialogEnterNewNameISO" parent="DialogEditText">
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:hint">@string/hint_new_currency_enter_name_ISO</item>
    </style>


    <style name="EditText" parent="MatchParent_WrapContent">
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="EditTextAmount" parent="EditText">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/hint_enter_amount</item>
    </style>

    <style name="EditTextDescription" parent="EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="maxLines">2</item>
        <item name="android:hint">@string/hint_add_you_description</item>
    </style>
</resources>