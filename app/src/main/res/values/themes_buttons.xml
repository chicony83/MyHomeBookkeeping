<resources>

    <style name="Buttons" />

    <style name="ButtonsMatchParent_WrapContent" parent="Buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SelectedParamDescription">
        <item name="android:layout_marginStart">@dimen/margin_double</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SelectedParamName" parent="WrapContent_WrapContent">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButtons" parent="Buttons">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/H6</item>
        <item name="elevation">@dimen/margin_normal</item>
        <item name="android:insetTop">@dimen/margin_zero</item>
        <item name="android:insetBottom">@dimen/margin_zero</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <style name="TopButtons" parent="DialogButtons">

    </style>

    <style name="DialogButtonLeft" parent="DialogButtons">

    </style>

    <style name="DialogButtonCenter" parent="DialogButtons">

    </style>

    <style name="DialogButtonRight" parent="DialogButtons">

    </style>

    <style name="ButtonFullWidth" parent="DialogButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogButtonLeft.Positive">
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/H5</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorSubmitButton</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogButtonRight.Negative">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/colorCancelButton</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogButtonCenter.Select">
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/H5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogButtonLeft.Change">
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/H5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>