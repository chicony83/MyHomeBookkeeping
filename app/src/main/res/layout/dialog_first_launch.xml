<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message"
        style="@style/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/message_first_launch_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        style="@style/DialogLayout.PositiveNegativeButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message">

        <Button
            android:id="@+id/submitFirstLaunchButton"
            style="@style/DialogButtonLeft.Positive"
            android:text="@string/text_on_button_yes" />


        <Button
            android:id="@+id/cancelFirstLaunchButton"
            style="@style/DialogButtonRight.Negative"
            android:text="@string/text_on_button_no" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>