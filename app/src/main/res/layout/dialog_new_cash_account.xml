<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogLayout">

    <TextView
        android:id="@+id/description_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_cash_account_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cashAccountName"
        style="@style/DialogEnterNewName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_name" />

    <TextView
        android:id="@+id/description_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descriptions_last_4_digits_of_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cashAccountName" />

    <EditText
        android:id="@+id/cashAccountNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_only_last_4_digits"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/description_number" />

    <LinearLayout
        style="@style/DialogLayout.PositiveNegativeButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cashAccountNumber">

        <Button
            android:id="@+id/addNewCashAccountButton"
            style="@style/DialogButtonLeft.Positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_on_button_add" />

        <Button

            android:id="@+id/cancelCreate"
            style="@style/DialogButtonRight.Negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_on_button_cancel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>