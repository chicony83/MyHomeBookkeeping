<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_name" />

    <EditText
        android:id="@+id/cashAccountName"
        style="@style/DialogEnterNewName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_4_digits_of_card" />

    <EditText
        android:id="@+id/cashAccountNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/only_last_4_digits"
        android:inputType="number"
        android:maxLength="4"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/addNewCashAccountButton"
            style="@style/DialogLinearButtonLeft"
            android:text="@string/add_new_cash_account_button_text" />

        <Button
            android:id="@+id/cancelCreate"
            style="@style/DialogLinearButtonRight.CancelButton"
            android:text="@string/cancel_text_button" />

    </LinearLayout>


</LinearLayout>