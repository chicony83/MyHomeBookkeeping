<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cashAccountItem"
    style="@style/RecyclerViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/RecyclerViewItemTextH2"
            android:id="@+id/nameCashAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="зарплатный счет" />

        <TextView
            style="@style/RecyclerViewItemTextH3"
            android:id="@+id/numberCashAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="1234" />
    </LinearLayout>
</androidx.cardview.widget.CardView>