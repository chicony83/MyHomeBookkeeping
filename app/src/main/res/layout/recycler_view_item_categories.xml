<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/categoryItemCardView"
    style="@style/RecyclerViewCard.Categories">

    <LinearLayout
        android:id="@+id/categoriesItem"
        style="@style/RecyclerViewItem"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal"
            tool:text="1" />

        <TextView
            android:id="@+id/category_cardView_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tool:text="проценты банка" />
    </LinearLayout>
</androidx.cardview.widget.CardView>