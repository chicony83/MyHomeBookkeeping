<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/DialogLayout">

    <EditText
        android:id="@+id/currency_name"
        style="@style/DialogEnterNewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        style="@style/DialogLayout.PositiveNegativeButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currency_name">

        <Button
            android:id="@+id/addNewCurrencyButton"
            style="@style/DialogButtonLeft.Positive"
            android:text="@string/text_on_button_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currency_name" />

        <Button
            android:id="@+id/cancelCreate"
            style="@style/DialogButtonRight.Negative"
            android:text="@string/text_on_button_cancel"
            app:layout_constraintStart_toEndOf="@id/addNewCurrencyButton"
            app:layout_constraintTop_toBottomOf="@id/currency_name" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>