<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moneyMoving.MoneyMovingFragment">

    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/scrollViewButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/selectQueryButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/selectCurrency"
                style="@style/TopButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_on_button_currency" />

            <Button
                android:id="@+id/selectCategory"
                style="@style/TopButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_on_button_category" />

            <Button
                android:id="@+id/selectCashAccount"
                style="@style/TopButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_on_button_cash_account" />

            <Button
                android:id="@+id/selectTimePeriod"
                style="@style/TopButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_on_button_time_period" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/moneyMovingHolder"
        style="@style/RecyclerHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/totalBalance"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewButtons" />

    <LinearLayout
        android:id="@+id/selectLayoutHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/selectLayout"
            layout="@layout/dialog_select_money_moving" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstLaunchDialogHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/firstLaunchDialog"
            layout="@layout/dialog_first_launch" />
    </LinearLayout>

    <TextView
        android:id="@+id/incomeBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="0" />

    <TextView
        android:id="@+id/spendingBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/totalBalance"
        app:layout_constraintStart_toEndOf="@id/incomeBalance"
        tools:text="0" />

    <TextView
        android:id="@+id/totalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0" />

</androidx.constraintlayout.widget.ConstraintLayout>