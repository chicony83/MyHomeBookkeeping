<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.queryMoneyMoving.QueryMoneyMovingFragment">


    <LinearLayout
        android:id="@+id/moneyMovingSelectorsHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/moneyMovingPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_double"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moneyMovingSelectorsHolder">

            <Button
                style="@style/ButtonsMatchParent_WrapContent"
                android:text="выбрать период" />

            <TextView
                style="@style/TextDescriptions"
                android:text="начальная дата" />

            <TextView
                style="@style/TextDescriptions"
                android:text="конечная дата" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moneyMovingSelectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextDescriptions"
                android:text="@string/cashAccountTextDescription" />

            <Button
                android:id="@+id/selectCashAccount"
                style="@style/ButtonsMatchParent_WrapContent"
                android:text="@string/selectCashAccount" />

            <TextView
                style="@style/TextDescriptions"
                android:text="@string/currencyTextDescription" />

            <Button
                android:id="@+id/select_currency"
                style="@style/ButtonsMatchParent_WrapContent"
                android:text="@string/selectCurrency" />

            <TextView
                style="@style/TextDescriptions"
                android:text="@string/categoryTextDescription" />

            <Button
                android:id="@+id/selectCategory"
                style="@style/ButtonsMatchParent_WrapContent"
                android:text="@string/selectCategory" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>