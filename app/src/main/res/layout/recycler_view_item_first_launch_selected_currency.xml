<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstLaunchSelectedCurrencyCardView"
    style="@style/RecyclerViewCard">

    <LinearLayout
        android:id="@+id/firstLaunchSelectedCurrencyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_normal"
        android:paddingEnd="@dimen/margin_normal">

        <TextView
            style="@style/RecyclerViewItem"
            android:id="@+id/remButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_arrow_to_the_left" />

        <TextView
            style="@style/RecyclerViewItem"
            android:gravity="center"
            android:id="@+id/nameCurrency"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="EUR" />

    </LinearLayout>
</androidx.cardview.widget.CardView>