<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="kotlin.jvm.functions.Function0" />

        <import type="kotlin.Unit" />

        <variable
            name="onClear"
            type="Function0&lt;Unit>" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/holder_categories"
        style="@style/Fragment"
        tools:context=".ui.categories.CategoriesFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            endIconClickListener="@{onClear}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_normal"
            android:hint="@string/hint_category"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:endIconDrawable="@drawable/ic_close"
            app:endIconMode="custom"
            app:layout_constraintEnd_toStartOf="@id/sortingButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/sortingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text_on_button_sorting_as"
            android:text="@string/text_on_button_sorting_as"
            android:textSize="@dimen/H6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoryHolder"
            style="@style/RecyclerHolder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_normal"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_til"
            tools:listitem="@layout/recycler_view_item_categories" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>