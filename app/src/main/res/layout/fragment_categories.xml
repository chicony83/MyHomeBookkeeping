<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.categories.CategoriesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/show_hide_add_category_fragment_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/categories_recycler_view_item" />

    <LinearLayout
        android:id="@+id/layoutConfirmation"
        style="@style/ConfirmationLayout"
        app:layout_constraintBottom_toTopOf="@id/show_hide_add_category_fragment_button">

        <Button
            android:id="@+id/selectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>

    <Button
        android:id="@+id/show_hide_add_category_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_money_category"
        app:layout_constraintBottom_toTopOf="@+id/addNewCategoryFragment"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/addNewCategoryFragment"
        style="@style/EnterNameLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/category_name"
            style="@style/EnterNameEditText" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/category_incoming_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="доходы" />

            <RadioButton
                android:id="@+id/category_spending_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="расходы" />
        </RadioGroup>

        <Button
            android:id="@+id/addNewCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>