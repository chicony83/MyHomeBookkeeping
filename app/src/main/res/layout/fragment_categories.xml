<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.categories.CategoriesFragment">

    <Button
        android:id="@+id/selectAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/show_hide_add_category_fragment_button"
        app:layout_constraintTop_toBottomOf="@id/selectAllButton"
        tools:listitem="@layout/categories_recycler_view_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutConfirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="выбрана категория"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/selectedItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/selectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select"
            app:layout_constraintEnd_toStartOf="@+id/cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectedItem"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/show_hide_add_category_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_money_category"
        app:layout_constraintBottom_toTopOf="@+id/addNewCategoryFragment"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/addNewCategoryFragment"
        style="@style/EnterNameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/category_name"
            style="@style/EnterNameEditText" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/category_incoming_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="доходы" />

            <RadioButton
                android:id="@+id/category_spending_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="расходы" />
        </RadioGroup>

        <Button
            android:id="@+id/addNewCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>