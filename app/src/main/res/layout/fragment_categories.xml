<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.categories.CategoriesFragment">


    <TextView
        android:id="@+id/headerTextCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/showHideAddCategoryFragment"
        app:layout_constraintTop_toBottomOf="@+id/headerTextCategories"
        tools:listitem="@layout/categories_recycler_view_item" />

    <LinearLayout
        android:id="@+id/layoutConfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/showHideAddCategoryFragment">

        <Button
            android:id="@+id/selectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>

    <Button
        android:id="@+id/showHideAddCategoryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add income money category"
        app:layout_constraintBottom_toTopOf="@+id/addNewCategoryFragment"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:id="@+id/addNewCategoryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/new_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="название категории" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/new_category_incoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="доходы" />

            <RadioButton
                android:id="@+id/new_category_spending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="расходы" />
        </RadioGroup>

        <Button
            android:id="@+id/addNewCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>