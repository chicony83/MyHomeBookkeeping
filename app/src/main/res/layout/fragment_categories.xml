<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.categories.CategoriesFragment">

        <TextView
            android:id="@+id/text_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/incomeCategoryHolder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/addIncomeCategory"
            app:layout_constraintTop_toBottomOf="@+id/text_categories"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/recycler_view_item"/>

        <Button
            android:id="@+id/addIncomeCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add income money category"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>