<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currencies.CurrenciesFragment">

    <LinearLayout
        android:id="@+id/topButtonsHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/selectAllButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_on_button_select_all"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currenciesHolder"
        style="@style/RecyclerHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/show_hide_add_currency_fragment_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topButtonsHolder" />

    <LinearLayout
        android:id="@+id/confirmationLayoutHolder"
        style="@style/DialogLayout.Holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@id/confirmationLayout"
            layout="@layout/dialog_select_currency" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newCurrencyLayoutHolder"
        style="@style/DialogLayout.Holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/newCurrencyLayout"
            layout="@layout/dialog_new_currency" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeCurrencyLayoutHolder"
        style="@style/DialogLayout.Holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/changeCurrencyLayout"
            layout="@layout/dialog_change_currency" />
    </LinearLayout>

    <Button
        android:id="@+id/show_hide_add_currency_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_on_button_add_new_currency"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>