<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currencies.CurrenciesFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currenciesHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/layoutConfirmation"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutConfirmation"
        style="@style/ConfirmationLayout"
        app:layout_constraintBottom_toTopOf="@+id/show_hide_add_currency_fragment_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/selectedItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/select" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/show_hide_add_currency_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_currency"
        app:layout_constraintBottom_toTopOf="@+id/addNewCurrencyFragment" />

    <LinearLayout
        android:id="@+id/addNewCurrencyFragment"
        style="@style/EnterNameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/currency" />

        <EditText
            android:id="@+id/currency_name"
            style="@style/EnterNameEditText" />

        <Button
            android:id="@+id/addNewCurrencyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>