<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.currencies.CurrenciesFragment">

    <Button
        android:id="@+id/selectAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selectAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currenciesHolder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/show_hide_add_currency_fragment_button"
        app:layout_constraintTop_toBottomOf="@id/selectAllButton" />

    <LinearLayout
        android:id="@+id/confirmationLayoutHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <include
            android:id="@id/layoutConfirmation"
            layout="@layout/fragment_confirmation_currency"
            />
    </LinearLayout>

    <Button
        android:id="@+id/show_hide_add_currency_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_currency"
        app:layout_constraintBottom_toTopOf="@+id/addNewCurrencyFragment" />

    <LinearLayout
        android:id="@+id/addNewCurrencyFragment"
        style="@style/EnterNameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/currency" />

        <EditText
            android:id="@+id/currency_name"
            style="@style/EnterNameEditText" />

        <Button
            android:id="@+id/addNewCurrencyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>